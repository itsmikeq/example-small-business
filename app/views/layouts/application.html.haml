!!! 5
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no", :name => "viewport",
     san_antonio: san_antonio_post_codes, austin_post_codes: austin_post_codes}/
    %title= @title || "AllStarAppliance"
    = favicon_link_tag 'favicon.ico'
    = favicon_link_tag 'apple-touch-icon.png', rel: 'apple-touch-icon', type: 'image/png'
    = include_gon
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    %script{"src"=>"https://apis.google.com/js/platform.js", "async" => "defer"}
    %script{"src"=>"//connect.facebook.net/en_US/sdk.js#xfbml=1&appId=384071068430902&version=v2.0"}
    -#= javascript_include_tag :defaults, "nested_form"
    / HTML5 shim, for IE6-8 support of HTML5 elements
    / [if lt IE 9]
      <script src="js/html5shiv.js"></script>
    = csrf_meta_tags
  %body
    #wrap
      %header= render 'layouts/navigation'
      .container
        .row
          .col-sm-12.text-center
            .flash-container
              = render 'layouts/messages'
        .row
          .col-sm-12
            / Main body
            - unless current_user && current_user.admin?
              .call-box
                = render "shared/call"
            = yield
    = render 'layouts/footer'